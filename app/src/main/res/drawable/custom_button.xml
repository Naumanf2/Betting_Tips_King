<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <gradient
                android:startColor="@color/color12"
                android:endColor="@color/color11"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="@color/color11" />
            <corners
                android:radius="7dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
    <item>
        <shape
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <gradient
                android:startColor="@color/color11"
                android:endColor="@color/color11"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="@color/color11" />
            <corners
                android:radius="7dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>