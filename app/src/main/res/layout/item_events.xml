<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:elevation="5dp"
        android:padding="7dp"
        android:layout_margin="8dp">

        <ImageView
            android:id="@+id/imageTeamLogo"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_margin="6dp"
            android:src="@drawable/icon_team_1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/textTeamName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:fontFamily="@font/poppins_semibold"
            android:text="Real Madrid"
            android:textColor="#1D2226"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/imageTeamLogo"
            app:layout_constraintStart_toEndOf="@+id/imageTeamLogo"
            app:layout_constraintTop_toTopOf="@+id/imageTeamLogo" />

        <TextView
            android:id="@+id/textTimeElapsed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Elapsed Time (25')"
            android:textSize="12sp"
            android:textColor="@color/black"
            android:fontFamily="@font/poppins_regular"
            android:layout_marginTop="9dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/textTeamName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/textTeamName" />

        <TextView
            android:id="@+id/textPlayerName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/tinos_regular"
            android:text="Talha Shahab (Player)"
            android:textColor="@color/black"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toEndOf="@+id/imageTeamLogo"
            app:layout_constraintTop_toBottomOf="@+id/textTeamName" />

        <TextView
            android:id="@+id/textEventDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Yellow Card"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="@+id/textPlayerName"
            app:layout_constraintTop_toBottomOf="@+id/textPlayerName" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="50dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/textPlayerName"
           />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textEventDetail"
            tools:layout_editor_absoluteX="7dp" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>