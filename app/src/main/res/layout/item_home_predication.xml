<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="20dp"
    app:cardCornerRadius="6dp"
    app:cardMaxElevation="20dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:padding="10dp">

        <TextView
            android:id="@+id/txt_league"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="15dp"
            android:layout_weight="10"
            android:fontFamily="@font/vistolsans_semibold"
            android:text="Italy: Coppa Italia-Round of 16"
            android:textColor="#000000"
            android:textSize="21sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txt_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/poppins_regular"
            android:text="19.01.2022"
            app:layout_constraintStart_toStartOf="@+id/txt_league"
            app:layout_constraintTop_toBottomOf="@+id/txt_league" />

        <TextView
            android:id="@+id/txt_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/roboto_regular"
            android:text="09:23 PM"
            app:layout_constraintEnd_toEndOf="@+id/txt_league"
            app:layout_constraintTop_toBottomOf="@+id/txt_league" />

        <View
            android:id="@+id/view1"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:background="#242526"
            app:layout_constraintEnd_toEndOf="@+id/txt_league"
            app:layout_constraintStart_toStartOf="@+id/txt_league"
            app:layout_constraintTop_toBottomOf="@+id/txt_date" />

        <TextView
            android:id="@+id/txt_home_team"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/poppins_medium"
            android:text="New York Knick"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view1" />

        <TextView
            android:id="@+id/txt_home_score"
            android:layout_width="17dp"
            android:layout_height="13dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="125dp"
            android:fontFamily="@font/vistolsans_semibold"
            android:text="212"
            app:layout_constraintBottom_toBottomOf="@+id/txt_home_team"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/txt_home_team" />

        <TextView
            android:id="@+id/txt_away_team"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/poppins_medium"
            android:text="New York Knick"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_home_team" />

        <TextView
            android:id="@+id/txt_away_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/vistolsans_semibold"
            android:text="114"
            app:layout_constraintBottom_toBottomOf="@+id/txt_away_team"
            app:layout_constraintEnd_toEndOf="@+id/txt_home_score"
            app:layout_constraintStart_toStartOf="@+id/txt_home_score"
            app:layout_constraintTop_toTopOf="@+id/txt_away_team" />


        <ImageView
            android:id="@+id/img_predictions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_check_circle"
            android:layout_marginEnd="40dp"
            app:layout_constraintBottom_toBottomOf="@+id/txt_away_team"
            app:layout_constraintEnd_toEndOf="@+id/txt_time"
            app:layout_constraintTop_toTopOf="@+id/txt_home_team" />

        <TextView
            android:id="@+id/txt_odd_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:fontFamily="@font/poppins_medium"
            android:text="1.3"
            android:textSize="21sp"
            app:layout_constraintBottom_toBottomOf="@+id/img_predictions"
            app:layout_constraintStart_toEndOf="@+id/img_predictions"
            app:layout_constraintTop_toTopOf="@+id/img_predictions" />


        <View
            android:id="@+id/view8"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/bg_button_rounded_blue"
            app:layout_constraintEnd_toEndOf="@+id/txt_league"
            app:layout_constraintStart_toStartOf="@+id/txt_away_team"
            app:layout_constraintTop_toBottomOf="@+id/txt_away_score" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:fontFamily="@font/poppins_medium"
            android:text="Status: Win"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="@+id/view8"
            app:layout_constraintStart_toStartOf="@+id/view8"
            app:layout_constraintTop_toTopOf="@+id/view8" />


        <TextView
            android:id="@+id/txt_predications"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:drawableStart="@drawable/ic_football"

            android:drawablePadding="10dp"
            android:text="2.5 over"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="@+id/view8"
            app:layout_constraintEnd_toEndOf="@+id/view8"
            app:layout_constraintTop_toTopOf="@+id/view8" />


        <ImageView
            android:id="@+id/img_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/ic_baseline_more_horiz_24"
            app:layout_constraintEnd_toEndOf="@+id/txt_time"
            app:layout_constraintTop_toTopOf="@+id/txt_league" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>