<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="14dp"
   >

    <TextView
        android:id="@+id/text_item_notification"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:drawableStart="@drawable/ic_dot_mdpi"
        android:drawablePadding="12dp"
        android:fontFamily="@font/roboto_regular"
        android:layout_marginEnd="30dp"
        android:lineSpacingExtra="3dp"
        android:text="Your password  has been successfully changes thank you"
        android:textColor="#575151"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/date_item_notification"
        app:layout_constraintEnd_toStartOf="@+id/img_item_notification"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/date_item_notification"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginStart="23dp"
        android:layout_marginBottom="13dp"
        android:fontFamily="@font/tinos_regular"
        android:text="Mar 03, 2022 at 09:15 AM"
        android:textColor="#575151"
        android:textSize="13sp"
        app:layout_constraintBottom_toTopOf="@+id/view5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_item_notification" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/img_item_notification"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:src="@drawable/ic_dot_mdpi"

        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize50Percent" />

    <View
        android:id="@+id/view5"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="15dp"
        android:layout_marginStart="23dp"
        android:layout_marginEnd="7dp"
        android:background="#5C707070"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/date_item_notification" />



</androidx.constraintlayout.widget.ConstraintLayout>