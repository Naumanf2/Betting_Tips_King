<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_margin="5dp"
    app:cardCornerRadius="10dp"
    android:elevation="5dp"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp">


        <ImageView
            android:id="@+id/imageTeam1"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginStart="8dp"
            android:src="@drawable/icon_team1"
            app:layout_constraintStart_toEndOf="@+id/textTime"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textTeam1name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/tinos_regular"
            android:text="Real Madrid"
            android:layout_marginStart="3dp"
            android:textColor="#1D2226"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/imageTeam1"
            app:layout_constraintStart_toEndOf="@+id/imageTeam1"
            app:layout_constraintTop_toTopOf="@+id/imageTeam1" />


        <ImageView
            android:id="@+id/imageTeam2"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/icon_team2"
            app:layout_constraintStart_toStartOf="@+id/imageTeam1"
            app:layout_constraintTop_toBottomOf="@+id/imageTeam1" />

        <TextView
            android:id="@+id/textTeam2name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/tinos_regular"
            android:text="FC Barcelona"
            android:textColor="#1D2226"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/imageTeam2"
            app:layout_constraintStart_toEndOf="@+id/imageTeam2"
            app:layout_constraintTop_toTopOf="@+id/imageTeam2" />

        <TextView
            android:id="@+id/textTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/calibri_regular"
            android:text="12:20"
            android:textColor="#1D2226"
            android:textSize="13sp"
            app:layout_constraintBottom_toBottomOf="@+id/textTeam2name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/imageTeam1" />


        <TextView
            android:id="@+id/textTeam1Score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/calibri_regular"
            android:text="3"
            android:textColor="#1D2226"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/textTeam1name"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textTeam1name"
            app:layout_constraintTop_toTopOf="@+id/textTeam1name" />

        <TextView
            android:id="@+id/textTeam2Score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/calibri_regular"
            android:text="3"
            android:textColor="#1D2226"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/textTeam2name"
            app:layout_constraintEnd_toEndOf="@+id/textTeam1Score"
            app:layout_constraintTop_toTopOf="@+id/textTeam2name" />

        <ImageView
            android:id="@+id/imageExpand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_expand_less"
            app:layout_constraintBottom_toBottomOf="@+id/textTeam1name"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/textTeam1name" />
        <ImageView
            android:id="@+id/imageStar"
            android:layout_width="21.56dp"
            android:layout_height="21.56dp"
            android:src="@drawable/icon_star_border"
            app:layout_constraintBottom_toBottomOf="@+id/textTeam2name"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/textTeam2name" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>