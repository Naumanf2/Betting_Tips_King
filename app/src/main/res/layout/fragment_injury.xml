<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.matches.InjuryFragment">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnInjuryHome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:backgroundTint="#26b1de"
        android:elevation="5dp"
        android:fontFamily="@font/calibri_bold"
        android:shadowColor="#151414"

        android:shadowDy="3"
        android:shadowRadius="3"
        android:text="Home"
        android:textColor="#fefefe"
        android:textSize="19sp"
        app:cornerRadius="12dp"

        app:layout_constraintEnd_toStartOf="@+id/btnInjuryAway"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnInjuryAway"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:backgroundTint="#e4e4e4"
        android:elevation="5dp"
        android:fontFamily="@font/calibri_bold"
        android:shadowColor="#151414"
        android:shadowDy="3"

        android:shadowRadius="3"
        android:text="Away"
        android:textColor="#12080f"
        android:textSize="19sp"
        app:cornerRadius="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btnInjuryHome"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="62dp" />

    <androidx.cardview.widget.CardView
        android:id="@+id/injuryCardView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="1dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="2dp"
        android:elevation="7dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/guideline"

        >

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/injuryRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:listitem="@layout/item_injury_recyclerview" />

    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>