<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="0.5dp"
        app:cardElevation="0.5dp"
        app:cardCornerRadius="5dp"
        android:layout_margin="10dp">


<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingStart="15dp"
    android:paddingEnd="15dp"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    >


    <TextView
        android:id="@+id/textStatisticsType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Shots off Goal"
        android:layout_marginTop="2dp"
        android:layout_marginStart="7dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/textStatisticsValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3"
        android:visibility="gone"
        android:layout_marginStart="30dp"
        app:layout_constraintStart_toEndOf="@+id/textStatisticsType"
        app:layout_constraintTop_toTopOf="@+id/textStatisticsType" />


    <ImageView
        android:id="@+id/imageTeamLogo"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/icon_team1"
        app:layout_goneMarginTop="5dp"
        app:layout_constraintStart_toStartOf="@+id/textStatisticsType"
        app:layout_constraintTop_toBottomOf="@+id/textStatisticsType" />


    <TextView
        android:id="@+id/textTeamName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="Real Madrid"
        android:textColor="#1D2226"
        android:textSize="11sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageTeamLogo"
        app:layout_constraintStart_toEndOf="@+id/imageTeamLogo"
        app:layout_constraintTop_toTopOf="@+id/imageTeamLogo" />



</androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</layout>